#!/usr/bin/env node
'use strict';

const path = require('path');
const spawn = require('child_process').spawn;

let node = process.argv[0];
let gulp_args = process.argv.slice(2);
let argv = require('../lib/cmd-args')(process.argv);
let gulp = path.resolve(__dirname, '..', 'node_modules', '.bin', 'gulp');
let gulpfile = path.resolve(__dirname, '..', 'gulpfile.js');
let cwd = process.cwd();

gulp_args.unshift(gulp);
gulp_args = gulp_args.concat(['--gulpfile', gulpfile]);
gulp_args = gulp_args.concat(['--cwd', cwd]);

/**
 * exec gulp task
 * $ /path/to/node /path/to/gulp-rsync-tools/node_modules/.bin/gulp <command> --gulpfile <gulpfile> --cwd <cwd>
 */
let call = spawn(node, gulp_args);
console.log('[exec]', gulp_args.join(' '));

call.stdout.on('data', (data) => {
  process.stdout.write(data);
});

call.stderr.on('data', (data) => {
  process.stderr.write(data);
});

call.on('exit', (code) => {
  process.exit(code);
});